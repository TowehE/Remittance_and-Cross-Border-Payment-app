export const fund_user_wallet_controller = async (req: Request, res: Response, next: NextFunction) => {
  try {
    if (!req.user) {
      throw new customError('Authentication required', 401);
    }

    const amount = req.body.amount;

    if (!amount || amount <= 0) {
      throw new customError('A valid amount is required', 400);
    }

    const updatedAccount = await fund_user_wallet(req.user.user_id, amount);

    res.status(200).json({
      status: 'success',
      data: updatedAccount
    });
  } catch (error) {
    next(error);
  }
};
